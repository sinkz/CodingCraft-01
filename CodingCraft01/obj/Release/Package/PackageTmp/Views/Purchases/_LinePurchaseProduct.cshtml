@model CodingCraft01.Models.PurchaseProduct

@using (Html.BeginCollectionItem("PurchaseProducts"))
{
    <div class="form-group">
        @Html.HiddenFor(model => model.PurchaseProductId)
        @Html.HiddenFor(model => model.PurchaseId)

        <label class="col-md-1 control-label">Nome</label>
        <div class="col-md-4">
            @Html.DropDownListFor(x => x.ProductId, (SelectList)ViewBag.Products, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ProductId, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-2">
            @Html.EditorFor(x => x.Quantity, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(x => x.Quantity, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-2">
            @Html.EditorFor(x => x.Price, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(x => x.Price, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-2">
            <a class="btn red" onclick="$(this).parent().parent().remove();">Excluir</a>
        </div>
    </div>
}
